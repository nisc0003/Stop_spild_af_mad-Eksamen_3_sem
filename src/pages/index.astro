---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Link from "../components/Link.astro";
import Card from "../components/Card.astro";

// Card data - kun det der er nødvendigt for at vise cards
const featuredCards = [
  {
    id: "madspild-hjemme",
    title: "Reducer madspild hjemme",
    image: "https://placehold.co/600x400/006269/ffffff?text=Madspild+Hjemme",
  },
  {
    id: "bliv-frivillig",
    title: "Bliv frivillig",
    image: "https://placehold.co/600x400/f5a600/ffffff?text=Bliv+Frivillig",
  },
  {
    id: "goer-en-forskel",
    title: "Hvad kan du gøre?",
    image: "https://placehold.co/600x400/00e4f5/ffffff?text=Gør+En+Forskel",
  },
];
---

<MainLayout title="Stop Spild Af Mad">
  <main class="container mx-auto p-4">
    <section class="mb-12">
      <Heading htmlheading="h1" size="large" stylingclasses="mb-4">
        Stop Spild Af Mad
      </Heading>
      <Text>
        Sammen kan vi gøre en forskel. Udforsk hvordan du kan bidrage til kampen
        mod madspild.
      </Text>
    </section>

    <section class="mb-12">
      <Heading htmlheading="h2" size="medium" stylingclasses="mb-6">
        Kom i gang
      </Heading>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredCards.map((card) => <Card {...card} />)}
      </div>
    </section>

    <section class="text-center py-12 bg-primary-100 rounded-lg">
      <Heading htmlheading="h2" size="medium" stylingclasses="mb-4">
        Klar til at gøre en forskel?
      </Heading>
      <Link href="/card-example" variant="primary" size="large">
        Se flere eksempler
      </Link>
    </section>
  </main>
</MainLayout>
