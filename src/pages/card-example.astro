---

<MainLayout title="Card Example - Mappable Cards">
  <main class="container mx-auto p-4">
    <Heading htmlheading="h1" size="large" stylingclasses="mb-8">
      Mappable Card Component Example
    </Heading>

    <!-- Card Grid - Mobile: 1 column, Tablet: 2 columns, Desktop: 3-4 columns -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-12"
    >
      {
        cardsData.map((card) => (
          <Card
            title={card.title}
            image={card.image}
            link={card.link}
            singleviewText={card.singleviewText}
            singleviewHeader={card.singleviewHeader}
            singleviewList={card.singleviewList}
            singleviewTheme={card.singleviewTheme}
            singleviewMedia={card.singleviewMedia}
            additionalText={card.additionalText}
            ctaText={card.ctaText}
            ctaLink={card.ctaLink}
            backLink={card.backLink}
          />
        ))
      }
    </div>

    <!-- Example: 2-column layout for wider cards -->
    <Heading htmlheading="h2" size="medium" stylingclasses="mb-6">
      Alternative 2-Column Layout
    </Heading>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        cardsData
          .slice(0, 2)
          .map((card) => (
            <Card
              title={card.title}
              image={card.image}
              link={card.link}
              singleviewText={card.singleviewText}
              singleviewHeader={card.singleviewHeader}
              singleviewList={card.singleviewList}
              singleviewTheme={card.singleviewTheme}
              singleviewMedia={card.singleviewMedia}
              additionalText={card.additionalText}
              ctaText={card.ctaText}
              ctaLink={card.ctaLink}
              backLink={card.backLink}
            />
          ))
      }
    </div>
  </main>
</MainLayout>
