---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
  <main class="container mx-auto p-4">
    <Heading htmlheading="h1" size="large">Komponentbibliotek</Heading>
    <Text stylingclasses="italic"
      >Her kan du finde alle de komponenter, der er brugt i dette projekt.</Text
    >
    <hr class="my-4" />

    <!-- ============================================================================================== -->
    <!-- TYPOGRAPHY SECTION -->
    <!-- ============================================================================================== -->
    <section class="mb-10">
      <Heading htmlheading="h2" size="large">Typografi & overskrifter</Heading>

      <!-- _____________________________ HEADERS _____________________________ -->
      <div class="flex-col">
        <div class="bg-accent-1-400 p-4">
          <Heading htmlheading="h3" size="medium">Headers</Heading>
        </div>
        <div class="flex flex-col gap-2 space space-between">
          <Heading
            htmlheading="h3"
            size="xlarge"
            weight="ExtraBold"
            stylingclasses="uppercase">display</Heading
          >
          <Heading htmlheading="h1" size="xlarge">h1 - xlarge</Heading>
          <Heading htmlheading="h2" size="large">h2 - large</Heading>
          <Heading htmlheading="h3" size="medium">h3 - medium</Heading>
          <Heading htmlheading="h4" size="small" weight="medium"
            >h4 - small</Heading
          >
          <Heading htmlheading="h5" size="xsmall" weight="normal"
            >h5 - xsmall</Heading
          >
          <Heading htmlheading="h1" font="sans" size="large"
            >h1 - xlarge - sans</Heading
          >
          <Heading htmlheading="h2" font="sans" size="medium"
            >h2 - medium - sans</Heading
          >
          <Heading htmlheading="h3" font="sans" size="small"
            >h3 - small - sans</Heading
          >
        </div>
      </div>

      <!-- _____________________________ PARAGRAPHS _____________________________ -->
      <div class="flex-col">
        <div class="bg-accent-2-400 p-4">
          <Heading htmlheading="h3" size="medium">Paragraph</Heading>
        </div>
        <div class="flex flex-col gap-2 space space-between">
          <Text teksttype="brødtekst">
            Her er en sektion brødtekst: Lorem ipsum dolor, sit amet consectetur
            adipisicing elit. Ullam dolorem doloremque commodi eaque quisquam
            quasi recusandae veniam. Corporis totam <Link href="#"
              >Default link:
            </Link> reiciendis quibusdam ratione iure aut, numquam tenetur voluptatem
            exercitationem sequi enim!
          </Text>
          <Text teksttype="konsultativ">
            Her en sektion konsultativ tekst: Lorem ipsum dolor, sit amet
            consectetur adipisicing elit. Ullam dolorem doloremque commodi eaque
            quisquam quasi recusandae veniam. Corporis totam reiciendis
            quibusdam ratione iure aut, numquam tenetur voluptatem
            exercitationem sequi enim!
          </Text>
          <Text teksttype="brødtekst" stylingclasses="italic">
            Her er en sektion brødtekst med ekstra css: Lorem ipsum dolor, sit
            amet consectetur adipisicing elit. Ullam dolorem doloremque commodi
            eaque quisquam quasi recusandae veniam. Corporis totam <Link
              href="#"
              >Default link:
            </Link> reiciendis quibusdam ratione iure aut, numquam tenetur voluptatem
            exercitationem sequi enim!
          </Text>
        </div>
      </div>
    </section>
    <!-- ______________________________________________________________________________________________ -->
    <!-- ============================================================================================== -->
    <!-- LINKS AND BUTTONS SECTION -->
    <!-- ============================================================================================== -->
    <section class="mb-10">
      <Heading htmlheading="h2" size="large">Links og buttons</Heading>

      <!-- _____________________________ SQUARE BUTTONS _____________________________ -->
      <div class="mb-12">
        <div class="bg-accent-3-400 p-6 rounded-t-lg">
          <Heading htmlheading="h3" size="medium">Square Buttons</Heading>
        </div>
        <div class="bg-gray-50 p-6 rounded-b-lg">
          <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-8"
          >
            <!-- Accent 1 - Square -->
            <div class="flex flex-col items-center space-y-4">
              <Heading htmlheading="h4" size="small">Accent 1</Heading>
              <div class="flex flex-col gap-4 w-full items-center">
                <Button variant="accent1" size="sm">Small</Button>
                <Button variant="accent1" size="md">Medium</Button>
                <Button variant="accent1" size="lg">Large</Button>
              </div>
            </div>

            <!-- Accent 2 - Square -->
            <div class="flex flex-col items-center space-y-4">
              <Heading htmlheading="h4" size="small">Accent 2</Heading>
              <div class="flex flex-col gap-4 w-full items-center">
                <Button variant="accent2" size="sm">Small</Button>
                <Button variant="accent2" size="md">Medium</Button>
                <Button variant="accent2" size="lg">Large</Button>
              </div>
            </div>

            <!-- Accent 3 - Square -->
            <div class="flex flex-col items-center space-y-4">
              <Heading htmlheading="h4" size="small">Accent 3</Heading>
              <div class="flex flex-col gap-4 w-full items-center">
                <Button variant="accent3" size="sm">Small</Button>
                <Button variant="accent3" size="md">Medium</Button>
                <Button variant="accent3" size="lg">Large</Button>
              </div>
            </div>

            <!-- Accent 4 - Square -->
            <div class="flex flex-col items-center space-y-4">
              <Heading htmlheading="h4" size="small">Accent 4</Heading>
              <div class="flex flex-col gap-4 w-full items-center">
                <Button variant="accent4" size="sm">Small</Button>
                <Button variant="accent4" size="md">Medium</Button>
                <Button variant="accent4" size="lg">Large</Button>
              </div>
            </div>

            <!-- Accent 5 - Square -->
            <div class="flex flex-col items-center space-y-4">
              <Heading htmlheading="h4" size="small">Accent 5</Heading>
              <div class="flex flex-col gap-4 w-full items-center">
                <Button variant="accent5" size="sm">Small</Button>
                <Button variant="accent5" size="md">Medium</Button>
                <Button variant="accent5" size="lg">Large</Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout>
