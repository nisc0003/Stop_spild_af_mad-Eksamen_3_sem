---
// Henter parametrene fra Astro.props
const {
  href = "#",
  target = "_self",
  variant = "green",
  size = "large",
} = Astro.props;

// Base styles for alle links - kun Tailwind classes
const baseClasses =
  "inline-block w-fit h-fit rounded-[var(--radius-CTA)] break-words whitespace-normal min-w-fit max-w-full text-center";

const sizeClasses = {
  xlarge:
    "text-[1.375rem] md:text-[1.5rem] lg:text-[2rem] font-semibold uppercase px-[2.5rem] py-[1.25rem]",
  large:
    "text-[1.125rem] md:text-[1.25rem] lg:text-[1.5rem] font-semibold uppercase px-[2rem] py-[0.75rem]",
  medium:
    "text-[1rem] md:text-[1.125rem] lg:text-[1.25rem] font-semibold uppercase px-[1.5rem] py-[0.75rem]",
  small:
    "text-[0.875rem] md:text-[1rem] font-medium uppercase px-[1rem] py-[0.5rem]",
};

const variantClasses = {
  green:
    "bg-[var(--color-green--400)] text-[var(--color-green--100)] hover:bg-[var(--color-green--100)] hover:text-[var(--color-green--400)] transition-all duration-300",

  "green-inverted":
    "bg-[var(--color-green--100)] text-[var(--color-green--400)] hover:bg-[var(--color-green--400)] hover:text-[var(--color-green--100)] transition-all duration-300",

  orange:
    "bg-[var(--color-orange--400)] text-[var(--color-orange--100)] hover:bg-[var(--color-orange--100)] hover:text-[var(--color-orange--400)] transition-all duration-300",

  black:
    "bg-[var(--color-black)] text-[var(--color-white)] hover:opacity-75 transition-all duration-300",

  purple:
    "bg-[var(--color-purple--400)] text-[var(--color-purple--100)] hover:bg-[var(--color-purple--100)] hover:text-[var(--color-purple--400)] transition-all duration-300",

  yellow:
    "bg-[var(--color-yellow--200)] text-[var(--color-black)] hover:bg-[var(--color-yellow--100)] hover:text-[var(--color-yellow--400)] transition-all duration-300",

  text: "text-[var(--color-black)] font-semibold hover:text-[var(--color-green--400)] hover:underline transition-all duration-300",

  textlink:
    "text-[var(--color-green--400)] font-semibold underline hover:opacity-75 transition-all duration-300",
};
---

<a
  href={href}
  target={target}
  class={`${baseClasses} ${sizeClasses[size]} ${variantClasses[variant]}`}
>
  <slot />
</a>
