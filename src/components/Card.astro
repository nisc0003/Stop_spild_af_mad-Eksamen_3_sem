---
import Heading from "../components/Heading.astro";
import Link from "../components/Link.astro";

const {
  slug,
  title,
  image,
  subtitle,
  textfield1,
  textfield2,
  textfield3,
  list,
  id,
  link,
  mediaType,
  mediaSrc,
  bgColor,
} = Astro.props;

// Link til singleview med slug
const singleviewUrl = `/singleview/${slug}`;
---

<article
  class="group bg-white border border-gray-300 rounded-lg overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300"
>
  <a href={singleviewUrl} class="block">
    <div class="relative overflow-hidden min-h-48 bg-gray-100">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-contain transition-transform duration-500 group-hover:scale-110"
      />
    </div>
    <div class="flex">
      <div class="p-4 md:p-6">
        <Heading
          htmlheading="h3"
          size="xsmall"
          stylingclasses="mb-3 group-hover:text-primary-500 transition-colors duration-300"
        >
          {title}
        </Heading>

        <Link href={singleviewUrl} variant="black" size="small">
          Læs mere →
        </Link>
      </div>
    </div>
  </a>
</article>
