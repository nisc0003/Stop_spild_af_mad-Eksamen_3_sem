---
// Henter parametrene fra Astro.props
const { size = "large", icon = false } = Astro.props;

const sizeClasses = {
  xlarge:
    "text-[1.375rem] md:text-[1.5rem] lg:text-[2rem] font-semibold uppercase px-6 py-4",
  large:
    "text-[1.125rem] md:text-[1.25rem] lg:text-[1.5rem] font-semibold uppercase px-6 py-3",
  medium:
    "text-[1rem] md:text-[1.125rem] lg:text-[1.25rem] font-semibold uppercase px-5 py-2.5",
  small:
    "text-[0.875rem] md:text-[1rem] lg:text-[1.125rem] font-semibold uppercase px-4 py-2",
};

const variantClasses =
  "bg-[var(--color-black)] text-[var(--color-white)] hover:opacity-75 transition-all duration-300";

const baseClasses =
  "inline-flex items-center justify-center gap-2 rounded-[var(--radius-CTA)] break-words whitespace-normal min-w-fit max-w-full";
---

<button
  class:list={[baseClasses, sizeClasses[size], variantClasses]}
  class:icon-button={icon}><slot /></button
>
